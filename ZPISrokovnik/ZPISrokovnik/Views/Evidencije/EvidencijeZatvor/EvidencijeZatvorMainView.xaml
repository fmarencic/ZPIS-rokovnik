<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZPISrokovnik.Views.Evidencije.EvidencijeZatvorMainView">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Spacing="30">
            <Button Text="Evidencija posjetitelja zatvorenicima na ulazu"
                    Command="{Binding OtvoriEvidencijuPosjetiteljaCommand}"
                    TextColor="White" 
                    BackgroundColor="#2196F3"/>
            <Button Text="Evidencija rasporeda zatvorenika po radnim mjestima"
                    Command="{Binding OtvoriEvidencijuRasporedaZatvorenikaPoRadnimMjestimaCommand}"
                    TextColor="White" 
                    BackgroundColor="#2196F3"/>
            <Button Text="Evidencija sudskog nadzora"
                    Command="{Binding OtvorEvidencijuSudskogNadzoraCommand}"
                    TextColor="White" 
                    BackgroundColor="#2196F3" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>