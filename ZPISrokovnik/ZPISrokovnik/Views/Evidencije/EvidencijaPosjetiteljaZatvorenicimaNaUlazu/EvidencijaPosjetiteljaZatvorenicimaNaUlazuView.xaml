                        Grid.Column="1"/>


            <Label Text="Datum odlaska"
                   Grid.Row="9"
                   Grid.Column="0"/>
            <DatePicker Grid.Row="9"
                        Grid.Column="1"/>


        </Grid>

    </ContentPage.Content>
</ContentPage>