                   Grid.Column="0"/>
            <Entry Grid.Row="5"
                   Grid.Column="1"/>
            <Label Text="Uloga"
                   Grid.Row="6"
                   Grid.Column="0"/>
            <Entry Grid.Row="6"
                   Grid.Column="1"/>

            <Label Text="Datumi"
                   Grid.Row="7"
                   Grid.Column="0"/>

