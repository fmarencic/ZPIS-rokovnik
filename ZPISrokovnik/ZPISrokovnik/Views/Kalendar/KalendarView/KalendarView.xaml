<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZPISrokovnik.Views.Kalendar.KalendarView.KalendarView">
    <ContentPage.Content>
        
        <StackLayout Margin="18,20">
            <StackLayout Orientation="Horizontal">
                <Label Text="Tip kalendara:" 
                       VerticalOptions="Center"
                       TextColor="White"/>
                <Picker 
                    ItemsSource="{Binding TipKalendara}"  
                    VerticalOptions="Center" 
                    HorizontalOptions="FillAndExpand" 
                    x:Name="TipKalendara"/>
            </StackLayout>
            <Label Text="Pribilježene napomene:" 
                   TextColor="White"></Label>
            <StackLayout>
                <ListView x:Name="ElementListe"
                          HasUnevenRows="True"
                          ItemTapped="ElementListe_OnItemTapped">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout>
                                    <Label Text="{Binding Datum}"></Label>
                                    <Label Text="{Binding Naziv}"></Label>
                                    <Label Text="{Binding Opis}"></Label>
                                    <Button x:Name="UrediDogadaj"
                                            Text="Uredi"
                                            BackgroundColor="Orange"
                                            TextColor="Black"
                                            IsVisible="{Binding Vidljivo}"
                                            Pressed="UrediDogadaj_OnPressed">
                                    </Button>
                                    <Button Text="Obriši"
                                            BackgroundColor="Tomato"
                                            x:Name="Obrisi"
                                            Pressed="ObrisiNapomenu_Pressed"
                                    ></Button>
                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Button x:Name="DodajNovuNapomenu" 
                        Text="Kreiraj novu napomenu" 
                        BackgroundColor="Teal"
                        Pressed="DodajNovuNapomenu_OnPressed"></Button>
            </StackLayout>
        </StackLayout>

    </ContentPage.Content>
</ContentPage>